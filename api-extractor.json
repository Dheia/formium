{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  "mainEntryPointFilePath": "<projectFolder>/packages/<unscopedPackageName>/dist/index.d.ts",
  "compiler": {
    "tsconfigFilePath": "<projectFolder>/packages/<unscopedPackageName>/tsconfig.build.json"
  },
  "bundledPackages": [],
  
  "apiReport": {
    "enabled": true,
    "reportFolder": "./temp/"
  },
  
  "docModel": {
    "enabled": true,
    "apiJsonFilePath": "<projectFolder>/packages/<unscopedPackageName>/dist/<unscopedPackageName>.api.json"
  },

  "dtsRollup": {
    "enabled": false
  },

  "tsdocMetadata": {
    "enabled": false
  },

  "newlineKind": "lf",

  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },

    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "ae-missing-release-tag": {
        "logLevel": "none"
      }
    },

    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    }
  }
}
